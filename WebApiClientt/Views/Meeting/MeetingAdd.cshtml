
@{
    ViewBag.Title = "MeetingAdd";
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/Custom.js"></script>
<h2>Toplantı Ekle</h2>

<form id="MeetingAddForm" class="form-horizontal">
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Toplantı Konusu</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="MeetingTopic" id="meetingTopic" placeholder="Toplantı Konusu" required>
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Toplantı Tarihi</label>
        <div class="col-sm-10">
            <input type="date" class="form-control" name="MeetingDate" id="meetingdate" required>
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Toplantı Başlangıç Saati</label>
        <div class="col-sm-10">
            <input type="time" class="form-control" name="MeetingStartTime" id="meetingstarttime" required>
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Toplantı Bitiş Saati</label>
        <div class="col-sm-10">
            <input type="time" class="form-control" name="MeetingFinishTime" id="meetingfinishtime" required>
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Katılımcılar</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="Participants" id="participants" required>
        </div>
    </div>

    <div class="col-sm-5">
        <input type="button" id="btnMeetingAdd" onclick="MeetingAdd(); return false;" value="Toplantı Ekle" class="btn btn-primary pull-right" >
    </div>
    <div class="clearfix"></div>
</form>