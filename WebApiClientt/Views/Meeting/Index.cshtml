
@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/Custom.js"></script>
<h2>Toplantı Listesi</h2>
<a href="Meeting/MeetingAdd" class="btn btn-primary pull-right">Yeni Ekle</a><br /><br />
<hr />
<div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Toplantı Konusu</th>
                <th>Toplantı Tarihi</th>
                <th>Toplantı Başlangıç Saati</th>
                <th>Toplantı Bitiş Saati</th>
                <th>Katılımcılar</th>
                <th>Detay</th>
            </tr>
        </thead>
        <tbody id="tblMeeting">
  
        </tbody>
    </table>
</div>
<br /><br />
<hr />
<h2>Toplantı Güncelleme Formu</h2><br />
<form id="MeetingUpdateForm" class="form-horizontal">
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Toplantı Konusu</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="MeetingTopic" id="MeetingTopic" placeholder="Toplantı Konusu" required>
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Toplantı Tarihi</label>
        <div class="col-sm-10">
            <input type="date" class="form-control" name="MeetingDate" id="MeetingDate" required>
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Toplantı Başlangıç Saati</label>
        <div class="col-sm-10">
            <input type="time" class="form-control" name="MeetingStartTime" id="MeetingStartTime" required>
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Toplantı Bitiş Saati</label>
        <div class="col-sm-10">
            <input type="time" class="form-control" name="MeetingFinishTime" id="MeetingFinishTime" required>
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Katılımcılar</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="Participants" id="Participants" required>
        </div>
    </div>

    <div class="col-sm-5">
        <input type="button" id="btnMeetingUpdate" value="Güncelle" class="btn btn-primary pull-right">
    </div>
    <div class="clearfix"></div>
</form>

<script language="javascript">
    $(document).ready(function () {
        MeetingList();
    });
    
</script>